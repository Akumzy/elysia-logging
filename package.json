{
  "name": "@akumzy/elysia-logging",
  "description": "A flexible logging library for Elysia.js",
  "author": {
    "name": "akumzy",
    "url": "https://github.com/akumzy",
    "email": "akumaisaacakuma@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akumzy/elysia-logging.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./consoleAdapter": {
      "require": "./dist/consoleAdapter.js",
      "import": "./dist/consoleAdapter.js",
      "node": "./dist/consoleAdapter.js",
      "default": "./dist/consoleAdapter.js",
      "types": "./dist/consoleAdapter.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist/* && tsc --project tsconfig.esm.json",
    "dev": "bun run --watch src/index.ts | pino-pretty",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ext .ts src",
    "bundle": "bun build --minify --compile src --outfile=build/api",
    "release": "yarn publish --access public"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "elysia": "^1.2.25"
  },
  "peerDependencies": {
    "elysia": "^1.2.25"
  },
  "optionalDependencies": {
    "pino": "^9.6.0",
    "@types/pino": "^7.0.5"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11",
    "@types/jest": "^29.5.14",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "bun-types": "^1.2.4",
    "bunyan": "^1.8.15",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar": "^0.2.16",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tslog": "^4.9.3",
    "typescript": "^5.8.2",
    "winston": "^3.17.0"
  },
  "homepage": "https://github.com/akumzy/elysia-logging",
  "bugs": "https://github.com/akumzy/elysia-logging/issues",
  "license": "MIT",
  "keywords": [
    "elysia",
    "logging",
    "logger"
  ],
  "version": "0.0.3"
}
